<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.meucampus.arthur.testez.ActivityTurmas">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_turmas2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb_turmas2"
        android:background="@color/colorFeed"
        android:paddingBottom="10dp">


        <ListView
            android:id="@+id/listTurmasMateriais"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tb_turmas2"
            android:layout_margin="0dp"
            android:paddingTop="10dp"
            android:scrollbarThumbVertical="@color/md_white_1000"
            android:scrollbarSize="0dp"
            android:background="@color/colorFeed"
            android:dividerHeight="2dp" />

        <ProgressBar
            android:id="@+id/progress_detalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />
    </FrameLayout>
</RelativeLayout>
