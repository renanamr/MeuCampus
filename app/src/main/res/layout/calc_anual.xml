<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:text="1째 Bimestre"
            android:id="@+id/TxtCalc"
            android:layout_marginTop="79dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/EdtCalc"
            android:layout_alignBottom="@+id/TxtCalc"
            android:layout_toEndOf="@+id/buttoncalc"
            android:layout_toRightOf="@+id/buttoncalc" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:text="2째 Bimestre"
            android:id="@+id/TxtCalc1"
            android:layout_below="@+id/TxtCalc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/Edtcalc1"
            android:layout_alignBottom="@+id/TxtCalc1"
            android:layout_toRightOf="@+id/buttoncalc"
            android:layout_toEndOf="@+id/buttoncalc" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:text="3째 Bimestre"
            android:id="@+id/TxtCalc2"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/TxtCalc1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:textColor="@android:color/black"
            android:id="@+id/Edtcalc2"
            android:layout_alignBottom="@+id/TxtCalc2"
            android:layout_toRightOf="@+id/buttoncalc"
            android:layout_toEndOf="@+id/buttoncalc" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:text="4째 Bimestre"
            android:id="@+id/TxtCalc3"
            android:layout_below="@+id/TxtCalc2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/Edtcalc4"
            android:visibility="invisible"
            android:layout_alignBottom="@+id/TxtProvaFinal"
            android:layout_toRightOf="@+id/buttoncalc"
            android:layout_toEndOf="@+id/buttoncalc" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado"
            android:id="@+id/buttoncalc"
            android:textColor="@color/md_light_cards"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/TxtProvaFinal"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/Txtresult"
            android:visibility="invisible"
            android:textColor="@color/colorReprove"
            android:layout_below="@+id/buttoncalc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:text="Prova Final"
            android:visibility="invisible"
            android:id="@+id/TxtProvaFinal"
            android:layout_below="@+id/TxtCalc3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:visibility="visible"
            android:id="@+id/EdtCalc3"
            android:layout_alignBottom="@+id/TxtCalc3"
            android:layout_toRightOf="@+id/buttoncalc"
            android:layout_toEndOf="@+id/buttoncalc" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:layout_alignTop="@+id/Txtresult"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>