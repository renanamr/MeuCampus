<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/list_shadow"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutImagem">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/calendar"
            android:id="@+id/imageEvento1"
            android:scaleType = "fitXY"
            android:adjustViewBounds = "true"
            android:maxHeight = "90dp"
            android:maxWidth = "90dp"
            android:minHeight = "90dp"
            android:minWidth = "90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="MAR"
            android:textColor="@color/md_black_1000"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/TxtDataImg4"
            android:visibility="visible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="25"
            android:textColor="@color/md_black_1000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:id="@+id/TxtDataImg3"
            android:layout_below="@id/TxtDataImg4"
            android:visibility="visible"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Título"
        android:textColor="@color/colorPrimarytext"
        android:id="@+id/txtTituloN"

        android:layout_alignTop="@+id/layoutImagem"
        android:layout_toRightOf="@+id/layoutImagem"
        android:layout_toEndOf="@+id/layoutImagem"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="sab,25 de dez às 3 PM"
        android:id="@+id/TxtData"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/txtTituloN"
        android:layout_alignLeft="@+id/txtTituloN"
        android:layout_alignStart="@+id/txtTituloN" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Granja Hall"
        android:textColor="@android:color/darker_gray"
        android:id="@+id/TxtLocal"
        android:layout_below="@+id/TxtData"
        android:layout_alignLeft="@+id/TxtData"
        android:layout_alignStart="@+id/TxtData" />


</RelativeLayout>