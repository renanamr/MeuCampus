<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:background="@drawable/list_shadow">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Título"
        android:textColor="@color/colorPrimarytext"
        android:id="@+id/txtTituloN"

        android:padding="10dp"
        android:layout_below="@+id/imageNoticia"
        android:layout_centerHorizontal="true"
        />



    <ImageView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageNoticia"
        android:scaleType = "fitXY"
        android:transitionName="imageTrasintion"
        android:adjustViewBounds = "true"
        android:maxHeight = "200dp"
        android:maxWidth = "400dp"
        android:minHeight = "1dp"
        android:minWidth = "400dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="left"

        android:text="     Uma descriçao sempre cai bem fica bonito e entra as informações, por isso é bom..."
        android:id="@+id/textView11"
        android:textSize="15dp"
        android:layout_below="@+id/txtTituloN"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/corte_noticia"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="4dp"
        android:paddingBottom="1dp"
        android:paddingTop="2dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
        <ImageView
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_clock"
            android:layout_weight="1.4"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="0dp"
            android:id="@+id/txtDataN"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="Data"/>

        <ImageView
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_action_view"
            android:layout_weight="1.4"
            android:layout_marginLeft="38dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="0dp"
            android:id="@+id/txtView"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:text="132"/>

    </LinearLayout>
</RelativeLayout>