<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    android:gravity="right"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview2"


        android:layout_gravity="right"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView

            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="teste"

            android:gravity="right"
            android:id="@+id/mensagem_enviada_turmas"

            android:layout_marginBottom="4dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/hora_enviada_turmas"
            android:layout_gravity="right"
            android:layout_below="@+id/mensagem_enviada_turmas"
            android:layout_alignRight="@+id/mensagem_enviada_turmas"
            android:layout_alignEnd="@+id/mensagem_enviada_turmas" />

    </RelativeLayout>
</RelativeLayout>
